<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDE4E8"
    tools:context=".ResetPasswordActivity">

    <EditText
        android:id="@+id/inputEmailResetPasswordActivity"
        android:layout_width="284dp"
        android:layout_height="62dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="97dp"
        android:background="@drawable/border_line"
        android:backgroundTint="@color/White"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="8sp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textPersonName"
        android:paddingLeft="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="173dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/border_line"
        android:backgroundTint="@color/White"
        android:text="Reset Password"
        android:textColor="@color/Black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/inputNewPassword"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/inputNewPassword"
        app:layout_constraintTop_toBottomOf="@+id/inputNewPassword"
        app:layout_constraintVertical_bias="0.075" />

    <EditText
        android:id="@+id/inputNewPassword"
        android:layout_width="292dp"
        android:layout_height="52dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/border_line"
        android:backgroundTint="@color/White"
        android:drawableLeft="@drawable/ic_security"
        android:drawableRight="@drawable/ic_baseline_visibility_off"
        android:drawablePadding="8sp"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPersonName"
        android:paddingLeft="15sp"
        android:paddingRight="10sp"
        app:layout_constraintEnd_toEndOf="@+id/inputEmailResetPasswordActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputEmailResetPasswordActivity"
        app:layout_constraintTop_toBottomOf="@+id/inputEmailResetPasswordActivity" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:background="#DDE4E8"
        android:src="@drawable/ic_baseline_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/inputNewPassword"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.477" />

</androidx.constraintlayout.widget.ConstraintLayout>